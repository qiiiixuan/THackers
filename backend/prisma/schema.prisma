// Prisma schema for QR Event Platform
// Using Supabase PostgreSQL as the database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User roles enum
enum Role {
  STUDENT
  CAREGIVER
  STAFF
}

// Gender enum for student profiles
enum Gender {
  FEMALE
  MALE
  OTHER
  PREFER_NOT_TO_SAY
}

// Caregiver type enum
enum CaregiverType {
  MEDICAL
  TEACHER
  STAFF
  FAMILY
  OTHER
}

// Signup status enum
enum SignupStatus {
  PENDING
  APPROVED
  WAITLISTED
  DECLINED
  CANCELLED
  CHECKED_IN
}

// User model - stores both students and caregivers
model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String
  role      Role     @default(STUDENT)
  qrToken   String   @unique @default(uuid()) @map("qr_token")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  studentProfile   StudentProfile?
  caregiverProfile CaregiverProfile?

  // Caregiver <> Student links
  caregiverLinks CaregiverStudent[] @relation("CaregiverLinks")
  studentLinks   CaregiverStudent[] @relation("StudentLinks")

  // Events this user has signed up for
  eventSignups EventSignup[] @relation("UserSignups")

  // Events this user has created (for staff/caregivers)
  createdEvents Event[] @relation("EventCreator")

  // Signups performed by this user (for caregiver-assisted signups)
  assistedSignups EventSignup[] @relation("SignupAssistant")

  // Signups approved by this user
  approvedSignups EventSignup[] @relation("SignupApprover")

  @@map("users")
}

model StudentProfile {
  userId          String   @id @db.Uuid
  gender          Gender?
  nationalId      String?  @map("national_id")
  nokName         String?  @map("nok_name")
  nokContact      String?  @map("nok_contact")
  disabilityType  String?  @map("disability_type")
  supportNeeds    String?  @map("support_needs")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("student_profiles")
}

model CaregiverProfile {
  userId        String        @id @db.Uuid
  contactNumber String?       @map("contact_number")
  caregiverType CaregiverType? @map("caregiver_type")
  organization  String?
  jobTitle      String?       @map("job_title")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("caregiver_profiles")
}

model CaregiverStudent {
  caregiverId    String   @db.Uuid @map("caregiver_id")
  studentId      String   @db.Uuid @map("student_id")
  relationship   String?
  consentGivenAt DateTime? @map("consent_given_at")
  createdAt      DateTime  @default(now()) @map("created_at")

  caregiver User @relation("CaregiverLinks", fields: [caregiverId], references: [id], onDelete: Cascade)
  student   User @relation("StudentLinks", fields: [studentId], references: [id], onDelete: Cascade)

  @@id([caregiverId, studentId])
  @@map("caregiver_students")
}

// Event model
model Event {
  id          String   @id @default(uuid()) @db.Uuid
  title       String
  description String?
  location    String?
  startTime   DateTime @map("start_time")
  endTime     DateTime @map("end_time")
  qrToken     String   @unique @default(uuid()) @map("qr_token")
  checkInToken String  @unique @default(uuid()) @map("check_in_token")
  capacity    Int?     @map("capacity")
  requiresApproval Boolean @default(false) @map("requires_approval")
  allowWaitlist    Boolean @default(true) @map("allow_waitlist")
  createdById String   @map("created_by") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relation to event creator
  createdBy User @relation("EventCreator", fields: [createdById], references: [id])

  // All signups for this event
  signups EventSignup[]

  @@map("events")
}

// EventSignup model - junction table for user-event signups
model EventSignup {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @map("user_id") @db.Uuid
  eventId      String   @map("event_id") @db.Uuid
  signedUpById String?  @map("signed_up_by") @db.Uuid
  status       SignupStatus @default(PENDING)
  approvedById String?  @map("approved_by") @db.Uuid
  approvedAt   DateTime? @map("approved_at")
  checkedInAt  DateTime? @map("checked_in_at")
  cancelledAt  DateTime? @map("cancelled_at")
  statusNote   String?  @map("status_note")
  createdAt    DateTime @default(now()) @map("created_at")

  // Relation to the user who signed up
  user User @relation("UserSignups", fields: [userId], references: [id], onDelete: Cascade)

  // Relation to the event
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // Relation to the user who performed the signup (null if self-signup)
  signedUpBy User? @relation("SignupAssistant", fields: [signedUpById], references: [id])

  // Relation to the user who approved the signup
  approvedBy User? @relation("SignupApprover", fields: [approvedById], references: [id])

  // Ensure a user can only sign up once per event
  @@unique([userId, eventId])
  @@map("event_signups")
}
